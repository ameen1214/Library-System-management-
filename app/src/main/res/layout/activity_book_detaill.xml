<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book_detaill_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:c_border="true"
            app:c_border_color="@color/black"
            app:c_border_width="1dp"
            android:src="@drawable/ic_boook"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/boookpic"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginTop="29dp"
            android:stretchColumns="2">

            <TableRow android:layout_marginBottom="10dp">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Book Name :"
                    android:textColor="@color/marron">

                </TextView>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"

                    android:layout_weight="1"
                    android:id="@+id/nameBB"
                    android:textStyle="bold"
                    android:textColor="@color/marron">

                </TextView>

            </TableRow>
            <TableRow android:layout_marginBottom="10dp">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Author :"
                    android:textColor="@color/marron">

                </TextView>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/AuteurBB"
                    android:textColor="@color/marron">

                </TextView>

            </TableRow>
            <TableRow android:layout_marginBottom="10dp">
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Book token by :"
                    android:textColor="@color/marron">

                </TextView>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:id="@+id/tokenBB"
                    android:textStyle="bold"
                    android:textColor="@color/marron">

                </TextView>

            </TableRow>


        </TableLayout>

    </LinearLayout>

</ScrollView>
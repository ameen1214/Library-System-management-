<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserDetaillActivity">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:c_border="true"
        app:c_border_color="@color/black"
        app:c_border_width="1dp"
        android:src="@drawable/ic_p"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/userpic"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="29dp"
        android:stretchColumns="2">

        <TableRow android:layout_marginBottom="10dp">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name"
                android:textColor="@color/marron">

            </TextView>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:layout_weight="1"
                android:id="@+id/nameUU"
                android:textStyle="bold"
                android:textColor="@color/marron">

            </TextView>

        </TableRow>
        <TableRow android:layout_marginBottom="10dp">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Date of birth :"
                android:textColor="@color/marron">

            </TextView>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/dateofbirthUU"
                android:textColor="@color/marron">

            </TextView>

        </TableRow>
        <TableRow android:layout_marginBottom="10dp">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Email :"
                android:textColor="@color/marron">

            </TextView>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:id="@+id/emailUU"
                android:textStyle="bold"
                android:textColor="@color/marron">

            </TextView>

        </TableRow>
        <TableRow android:layout_marginBottom="10dp">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Phone :"
                android:textColor="@color/marron">

            </TextView>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:id="@+id/PhoneUU"
                android:textColor="@color/marron">

            </TextView>

        </TableRow>
        <TableRow android:layout_marginBottom="10dp">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Books token :"
                android:textColor="@color/marron">

            </TextView>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_weight="1"
                android:id="@+id/BooktokenUU"
                android:textColor="@color/marron">

            </TextView>

        </TableRow>
    </TableLayout>

</LinearLayout>
</ScrollView>